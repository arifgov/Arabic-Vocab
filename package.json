{
  "name": "madinah-arabic-vocab-trainer",
  "version": "1.0.0",
  "description": "Arabic vocabulary trainer for Madinah Arabic books",
  "scripts": {
    "extract": "node scripts/extract_vocab.js",
    "extract-ocr": "node scripts/extract_from_ocr.js",
    "version": "node scripts/update-version.js",
    "version:patch": "node scripts/update-version.js --patch",
    "version:minor": "node scripts/update-version.js --minor",
    "version:major": "node scripts/update-version.js --major",
    "version:force": "node scripts/update-version.js --force",
    "deploy": "node scripts/update-version.js && npx firebase-tools deploy --only hosting",
    "serve": "npx firebase-tools serve",
    "login": "npx firebase-tools login",
    "hosting:deploy": "npx firebase-tools deploy --only hosting"
  },
  "dependencies": {
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {},
  "keywords": ["arabic", "vocabulary", "learning"],
  "author": "",
  "license": "MIT"
}

